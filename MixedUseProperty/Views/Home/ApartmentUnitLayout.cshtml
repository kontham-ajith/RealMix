@model MixedUseProperty.Models.MixProperty
<p> </p>
<br />

<div class="col-xs-12" style="text-align:center;">

    <fieldset>
        <div style="border:1px solid black;">

            <br />
            @{int NoofUnits = 4;
            }

            @for (int i = 0; i < NoofUnits; i++)
            {

                if (i == 1)
                {
                    <svg width="500" height="120">

                       
                            <rect width="100%" height="100%" style="fill:gray;stroke-width:3;stroke:rgb(0,0,0)" />
                            <text x="30%" y="50%" fill="white">Unit 202@(i) (1000 Sq ft.)</text>
                
                    </svg>
                                }
                                else
                                {
                    <svg width="500" height="120">

                     
                            <rect width="100%" height="100%" style="fill:blue;stroke-width:3;stroke:rgb(0,0,0)" />
                            <text x="30%" y="50%" fill="white">Unit 202@(i) (1000 Sq ft.) </text>;
                        
                    </svg>

                }

            }

        </div>
    </fieldset>


    <div style="text-align:right;">
        <a href="javascript:history.back()">Go Back</a>
    </div>
