<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mixed Use Property Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Real Mix", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>
                        @Html.ActionLink("Property", "Index", "Property")
                    </li>
                    <li>@Html.ActionLink("Space", "Index", "Spaces")</li>
                    <li>@Html.ActionLink("Site", "Index", "Sites")</li>
                    <li>@Html.ActionLink("Property-Space", "Index", "PropertySpace")</li>
                    <li>@Html.ActionLink("Residents", "Index", "Residents")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                    <li>@Html.ActionLink("Historic", "Index", "Historic")</li>
                    <li>@Html.ActionLink("Variable", "Index", "Variables")</li>
                </ul>
                <div style="color:white;text-align:right;">
                    <a style="font-size:medium;" href="~/Login/Index">Ajith</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer style="position: fixed;bottom: 0;left:45%;text-align:center;">
            <p>&copy; @DateTime.Now.Year - RealPage India</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
